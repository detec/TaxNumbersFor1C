<?xml version="1.0" encoding="UTF-8"?>
<!-- This is needed for CDI support using Weld
http://balusc.omnifaces.org/2013/10/how-to-install-cdi-in-tomcat.html
 -->
<Context reloadable="true">
<WatchedResource>WEB-INF/web.xml</WatchedResource>

<Resource factory="org.jboss.weld.resources.ManagerObjectFactory" type="javax.enterprise.inject.spi.BeanManager" auth="Container" name="BeanManager"/>
</Context>